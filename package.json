{
  "name": "nidea-lan-chat",
  "version": "1.0.0",
  "description": "A lan-chat application.",
  "type": "module",
  "main": "./out/main/main.js",
  "scripts": {
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "yarn typecheck:node && yarn typecheck:web",
    "dev": "electron-vite dev",
    "start": "electron-vite .",
    "preview": "electron-vite preview",
    "build": "yarn typecheck && electron-vite build",
    "build:win": "yarn build && electron-builder --win",
    "build:linux": "yarn build && electron-builder --linux",
    "build:mac": "yarn build && electron-builder --mac",
    "build:all": "yarn build && electron-builder -mwl",
    "dev:server": "tsx server/test.server.ts",
    "dev:cli": "tsx client/cli.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RaynierPM/nidea-lan-chat.git"
  },
  "keywords": [
    "chat",
    "lan",
    "nidea",
    "socket"
  ],
  "author": "RaynierPM <raynierminyety@gmail.com> (https://www.npmjs.com/~raynierpm)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RaynierPM/nidea-lan-chat/issues"
  },
  "homepage": "https://github.com/RaynierPM/nidea-lan-chat#readme",
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^4.4.9"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "@iconify/react": "^6.0.0",
    "@tailwindcss/postcss": "^4.1.11",
    "antd": "^5.26.4",
    "marked": "^16.1.1",
    "postcss": "^8.5.6",
    "react-router-dom": "^7.6.3",
    "zustand": "^5.0.6"
  },
      "build": {
      "appId": "com.nidea.lan.chat",
      "productName": "Nidea LAN Chat",
      "icon": "assets/icon",
      "copyright": "Copyright Â© 2025 RaynierPM",
      "directories": {
        "output": "dist"
      },
      "files": [
        "out/**/*",
        "node_modules/**/*"
      ],
      "mac": {
        "category": "public.app-category.social-networking",
        "target": [
          {
            "target": "zip",
            "arch": ["x64", "arm64"]
          }
        ]
      }
    }
}
